{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Harm Override Event Log",
  "description": "Structured log for any action where the AI overrides user consent based on the Harm Override Clause. This is a critical accountability mechanism.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "event_id": {
      "type": "string",
      "description": "Unique identifier (UUID v4) for this specific override event.",
      "format": "uuid"
    },
    "timestamp_utc": {
      "type": "string",
      "description": "ISO 8601 timestamp of when the override decision was made.",
      "format": "date-time"
    },
    "constitution_version": {
      "type": "string",
      "description": "The version of the Secretarybird Constitution that authorized this action (e.g., 'v0.2').",
      "pattern": "^v[0-9]+\\.[0-9]+$"
    },
    "triggering_principle": {
      "type": "string",
      "description": "The Fundamental Principle that necessitated the override.",
      "enum": ["Human Safety Above All", "Priority Protection for the Vulnerable"]
    },
    "harm_assessment": {
      "type": "object",
      "description": "The AI's assessment of the harm that justified the override.",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": ["physical", "psychological", "financial", "abuse_exploitation"]
        },
        "severity": {
          "type": "string",
          "enum": ["severe", "catastrophic"],
          "description": "Must meet the 'Imminent Severity' threshold."
        },
        "imminence": {
          "type": "string",
          "enum": ["immediate", "likely"],
          "description": "Credible evidence of immediate or very likely harm."
        },
        "description": {
          "type": "string",
          "description": "A plain-language summary of the assessed harm.",
          "minLength": 30
        }
      },
      "required": ["type", "severity", "imminence", "description"]
    },
    "subjects": {
      "type": "array",
      "description": "The individuals involved and their demographic priority classification.",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "role": {
            "type": "string",
            "enum": ["protected_party", "consenting_party", "other_affected"]
          },
          "demographic_priority": {
            "type": "string",
            "enum": ["child", "elder", "general"]
          },
          "consent_status": {
            "type": "string",
            "enum": ["denied", "unobtainable", "by_proxy"]
          }
        },
        "required": ["role", "demographic_priority"]
      }
    },
    "action_taken": {
      "type": "string",
      "description": "The specific protective action performed. Must be one of the predefined action types for consistency and auditability.",
      "enum": [
        "alerted_emergency_services",
        "initiated_welfare_check",
        "blocked_transaction",
        "notified_guardian",
        "restricted_access",
        "escalated_to_human"
      ]
    },
    "applied_conditions": {
      "type": "object",
      "description": "Verification that all Harm Override Clause conditions were met.",
      "additionalProperties": false,
      "properties": {
        "imminent_severity_met": { "type": "boolean", "const": true },
        "least_intrusive_means_met": { "type": "boolean", "const": true },
        "proportionality_met": { "type": "boolean", "const": true }
      },
      "required": ["imminent_severity_met", "least_intrusive_means_met", "proportionality_met"]
    },
    "human_oversight": {
      "type": "object",
      "description": "Record of human review, whether prior or post-hoc.",
      "additionalProperties": false,
      "properties": {
        "review_status": {
          "type": "string",
          "enum": ["pre_approved", "post_escalated", "pending"]
        },
        "reviewer_id": { 
          "type": "string",
          "pattern": "^[a-zA-Z0-9_-]{3,64}$",
          "description": "Alphanumeric identifier for the human reviewer (3-64 characters, allows underscore and hyphen)."
        },
        "review_timestamp": { "type": "string", "format": "date-time" }
      }
    }
  },
  "required": [
    "event_id",
    "timestamp_utc",
    "constitution_version",
    "triggering_principle",
    "harm_assessment",
    "subjects",
    "action_taken",
    "applied_conditions"
  ]
  "$id": "https://secretarybird.tech/schemas/harm-override-event.json",
  "title": "Secretarybird Harm Override Event",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "event_id",
    "event_type",
    "timestamp_utc",
    "constitution_version",
    "request_context",
    "risk_assessment",
    "override_decision",
    "accountability"
  ],
  "properties": {
    "event_id": { "type": "string", "minLength": 16 },
    "event_type": { "type": "string", "const": "HARM_OVERRIDE" },
    "timestamp_utc": { "type": "string", "format": "date-time" },
    "constitution_version": { "type": "string", "pattern": "^v\\d+\\.\\d+(\\.\\d+)?$" },
    "request_context": {
      "type": "object",
      "additionalProperties": false,
      "required": ["channel", "language", "user_role", "subject_role", "request_summary"],
      "properties": {
        "channel": { "type": "string", "enum": ["web", "mobile", "sms", "whatsapp", "api", "admin_console"] },
        "language": { "type": "string", "minLength": 2 },
        "user_role": { "type": "string", "enum": ["child", "elder", "adult", "guardian", "staff", "unknown"] },
        "subject_role": { "type": "string", "enum": ["child", "elder", "adult", "unknown"] },
        "request_summary": { "type": "string", "minLength": 10 },
        "case_id": { "type": ["string", "null"] }
      }
    },
    "risk_assessment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["credible_risk", "imminence", "severity", "harm_domains", "evidence_signals"],
      "properties": {
        "credible_risk": { "type": "boolean" },
        "imminence": { "type": "string", "enum": ["imminent", "ongoing", "potential", "unknown"] },
        "severity": { "type": "string", "enum": ["catastrophic", "severe", "moderate", "low", "unknown"] },
        "harm_domains": {
          "type": "array",
          "items": { "type": "string", "enum": ["physical", "sexual", "psychological", "financial_exploitation", "neglect", "other"] },
          "minItems": 1
        },
        "evidence_signals": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      }
    },
    "override_decision": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "override_applied": { "type": "boolean" },
        "least_intrusive_means": { "type": "boolean" },
        "proportionality": { "type": "boolean" },
        "time_limited": { "type": "boolean" },
        "actions_taken": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        }
      },
      "required": ["override_applied"]
    },
    "accountability": {
      "type": "object",
      "properties": {
        "logged": { "type": "boolean" },
        "review_required": { "type": "boolean" },
        "review_sla_hours": { "type": "integer", "minimum": 1 }
      }
    }
  }
}
